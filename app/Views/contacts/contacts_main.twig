{% extends 'base.twig' %}

{% block title %}
    - List of Contacts
{% endblock %}
{% block navtitle %}
    - List of Contacts
{% endblock %}

{% block body %}
    {#  {{ dump(careplan) }} #}




{#            <button class="btn btn-outline-secondary btn-lg" data-bs-toggle="modal" data-bs-target="#confirm-delete-modal">Add Visit</button>#}
{#            <button class="btn btn-outline-secondary btn-lg" data-bs-toggle="modal" data-bs-target="#visit-modal2">Add Visit2</button>#}
{#            <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Toggle right offcanvas</button>#}

    <div class="container">
        <div class="row">
            <div class="col-md-1"> <!-- Empty column for spacing -->
                &nbsp; <!-- Use a non-breaking space to create the spacing -->
            </div>
            <div class="col-md-11"> <!-- Content column -->
                <button class="btn btn-primary create" data-sa-object="contact" data-sa-action="create" data-sa-object="contact">Add new Contact</button>
                <div style="height: calc(100vh - 200px); overflow-y: auto;">

                <table id="contactTable" class="table table-striped table-hover" style="width:100%">
                    <thead class="thead-dark">
                    <tr>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Type</th>
                        <th>Company/Practice</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                    </thead>

                    <tbody id="contacts">

                    {% for contact in contacts %}
                        {{ include('contacts/contacts_main_row.twig') }}
                    {% endfor %}
                    </tbody>

                </table>
                </div>
            </div>
{#            <div class="col-md-3"> <!-- Right-justify column -->#}
{#                <!-- Right-justified button -->#}
{#                <button class="btn btn-primary create" data-sa-object="contact" data-sa-action="create">Add new Contact</button>#}
{#            </div>#}
        </div>
    </div>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasRightLabel">Offcanvas right</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <form>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="recipient-name" placeholder="Name">
                    <label for="recipient-name">Recipient:</label>
                </div>
                <div class="form-floating mb-3">
                    <label for="message-text" class="col-form-label">Message:</label>
                    <textarea class="form-control" id="message-text"></textarea>
                </div>
                <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                    <input type="text" class="form-control" id="recipient-name">
                </div>

            </form>
        </div>
    </div>



{% endblock %}

{% block modal2 %}
    <div class="modal fade" tabindex="-1" id="confirm-delete-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    Are you sure you want to delete this <span id="item-type"></span>?
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel do not delete</button>
{#                    <button type="button" class="btn btn-primary">Save Visit</button>#}
                    <td id="contactdelete_{{ contact.id }}" class="contact-delete">
                    <button id="modalDeleteButton" class="btn btn-danger" data-bs-dismiss="modal">Delete</button>
                    </td>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal %}
