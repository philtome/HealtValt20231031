{% extends 'base.twig' %}

{% block title %}
    - Contact Details
{% endblock %}

{% block navtitle %}
    - Contact Details
{% endblock %}
{% block body %}
    <!-- Specific content for template1.twig -->

    <div class="container mt-4">
        <form id="contact_details_form">
            <div class="row">
                <!-- First Column -->
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Last Name:</label>
                        <div class="col-sm-8">
                            <input type="text" name="contactLastName" id="contactLastName"
                                   value="{{ contact.last_name }}" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">First Name:</label>
                        <div class="col-sm-8">
                            <input type="text" name="contactFirstName" id="contactFirstName"
                                   value="{{ contact.first_name }}" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Contact Type:</label>
                        <div class="col-sm-8">
                            <input type="text" name="contacttype" id="contact-type"
                                   value="{{ contact.contact_type }}" class="form-control">
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Is Driver:</label>
                        <div class="col-sm-8">
                            <input type="checkbox" name="isDriver" id="isDriverCheckbox" {{ contact.is_driver ? 'checked' : '' }} class="mt-3">
                        </div>
                    </div>



                </div>
                <!-- second colun -->
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Email:</label>
                        <div class="col-sm-8">
                            <input type="text" name="contactemail" id="contact-email"
                                   value="{{ contact.email }}" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Phone:</label>
                        <div class="col-sm-8">
                            <input type="text" name="contactphone" id="contact-phone"
                                   value="{{ contact.phone }}" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Company/Practice:</label>
                        <div class="col-sm-8">
                            <textarea name="companypractice" id="company-practice"
                                      class="form-control">{{ contact.company_practice }}</textarea>
                        </div>
                    </div>

                </div>

            </div>
            <div class="form-group row mt-4 saveButton" data-item-id="{{ contact.id }}">
                <div class="col-sm-12 text-center">
                    <button id="btn_contacts_save" type="submit" class="btn btn-primary">Save</button>
                    <button id="btn_contacts_cancel" type="button" class="btn btn-secondary btnCancel">Cancel</button>
                </div>
            </div>

        </form>
    </div>

{% endblock %}
