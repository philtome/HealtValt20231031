{% extends 'base.twig' %}

{% block title %}
    - List of Cholesterol Results
{% endblock %}

{% block body %}
    {#  {{ dump(careplan) }} #}
    {#    {% set pageHeader = "visit List" %}#}

    <button class="btn btn-primary create m-2" data-sa-action="create" data-sa-object="cholesterol">Create New
        <i class="fa-solid fa-plus"></i></button>
    <div class="table-responsive">
        <table id="a1cTable" class="table table-striped table-hover" style="width:100%">
            <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Total Cholestrol</th>
                <th>Cholesterol HDL</th>
                <th>Cholesterol LDL</th>
                <th>Triglycerides</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>

            <tbody id="a1cs">

            {% for cholesterol in cholesterols %}
                {{ include('labs/cholesterols_main_row.twig') }}
            {% endfor %}
            </tbody>

        </table>
    </div>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasRightLabel">Offcanvas right</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <form>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="recipient-name" placeholder="Name">
                    <label for="recipient-name">Recipient:</label>
                </div>
                <div class="form-floating mb-3">
                    <label for="message-text" class="col-form-label">Message:</label>
                    <textarea class="form-control" id="message-text"></textarea>
                </div>
                <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Recipient:</label>
                    <input type="text" class="form-control" id="recipient-name">
                </div>

            </form>
        </div>
    </div>



{% endblock %}

{% block errorModal %}
    <div class="modal fade" tabindex="-1" id="display-error-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">
                        <i class="fa-solid fa-triangle-exclamation"></i> Warning
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <p id="error-message"></p> <span id="item-type"></span>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal %}
