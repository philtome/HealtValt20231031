{% extends 'base.twig' %}

{% block title %}
    - Cholesterol Details
{% endblock %}

{% set navHeader = 'Cholesterol Details -'  ~ visits.firstName ~ ' ' ~ visits.lastName %}

{% block body %}
    <!-- Specific content for template1.twig -->

    <div class="container mt-4">
        <form id="cholesterol_details_form">
            <div class="row">
                <!-- First Column -->
                <div class="col-sm-6">

                    <div class="form-group">
                        <label for="dateTimeField" class="form-label">Cholesterol Date/Time:</label>
                        <input type="datetime-local" name="cholesteroldate" id="cholesteroldate"
                                {% if cholesterols.cholesterolDate is null %}
                                    value="{{ now|date('Y-m-d H:i') }}"
                                {% else %}
                                    value="{{ cholesterols.cholesterolDate }}"
                                {% endif %}
                               class="form-control">
                    </div>

                    <div class="form-group row">
                        <label for="cholesterolvalue" class="col-sm-4 col-form-label text-end">Cholesterol Value:</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" name="cholesteroltotalvalue" id="cholesteroltotalvalue"
                                       value="{{ cholesterols.cholesterolTotalValue }}" class="form-control">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="cholesterolhdlvalue" class="col-sm-4 col-form-label text-end">Cholesterol HDL Value:</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" name="cholesterolhdlvalue" id="cholesterolhdlvalue"
                                       value="{{ cholesterols.cholesterolHdlValue }}" class="form-control">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="cholesterolldlvalue" class="col-sm-4 col-form-label text-end">Cholesterol LDL Value:</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" name="cholesterolldlvalue" id="cholesterolldlvalue"
                                       value="{{ cholesterols.cholesterolLdlValue }}" class="form-control">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="triglyceridesvalue" class="col-sm-4 col-form-label text-end">Triglycerides Value:</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" name="triglyceridestotalvalue" id="triglyceridestotalvalue"
                                       value="{{ cholesterols.triglyceridesTotalValue }}" class="form-control">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>

                    <!-- second colun -->
                    {#                <div class="col-sm-6">#}
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Notes:</label>
                        <div class="col-sm-8">
            <textarea name="cholesterolnotes" id="cholesterolnotes"
                      class="form-control h-auto pt-3"
                      aria-describedby="cholesterolnotesHelp">{{ cholesterols.cholesterolNotes }}</textarea>
                        </div>
                    </div>

                    {#                </div>#}
                </div>
            </div>



            <div class="form-group row mt-4 saveButton" data-item-id="{{ cholesterols.id }}">
                <div class="col-sm-12 text-center">
                    <button id="btn_save" data-sa-object="cholesterol" type="submit" class="btn btn-primary">Save</button>
                    <button id="btn_cancel" type="button" class="btn btn-secondary btnCancel">Cancel</button>
                </div>
            </div>

        </form>
    </div>

{% endblock %}
