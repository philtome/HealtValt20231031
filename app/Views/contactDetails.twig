{% extends 'base.twig' %}

{% block title %}
    - Contact Details
{% endblock %}

{% block navtitle %}
    - Contact Details
{% endblock %}
{% block body %}
    <!-- Specific content for template1.twig -->

    <div class="container">
        <div class="row">
            <div class="col-xs-6">


                <form action="/lib/visit_update.php" method="GET">

                    <div class="form-group">
                        <label for="contact-lastname" class="control-label">Last name</label>
                        <input type="text" name="contactLastName" id="contactLastName"
                               value="{{ contact.last_name }}" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="contact-firstname" class="control-label">First name</label>
                        <input type="text" name="contactfirstname" id="contact-firstname"
                               value="{{ contact.first_name }}" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label for="contact-type" class="control-label">Contact Type</label>
                        <input type="text" name="contacttype" id="contact-type"
                               value="{{ contact.type }}" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="contact-email" class="control-label">Email</label>
                        <textarea name="contactemail" id="contact-email"
                                  class="form-control">{{  contact.email }}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-heart"></span>
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
