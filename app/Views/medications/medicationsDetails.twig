{% extends 'base.twig' %}

{% block title %}
    - Visit Details
{% endblock %}

{% set navHeader = 'visit Details -'  ~ visits.firstName ~ ' ' ~ visits.lastName %}

{% block body %}
    <!-- Specific content for template1.twig -->

    <div class="container mt-4">
        <form id="visit_details_form">
            <div class="row">
                <!-- First Column -->
                <div class="col-sm-6">

                    <div class="form-group">
                        <label for="dateTimeField" class="form-label">Visit Date/Time:</label>
                        <input type="datetime-local" name="visitdate" id="visitdate"
                               value="{{  visits.date }}" class="form-control">
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Visit Type:</label>
                        <div class="col-sm-8">
                            <input type="text" name="visittype" id="visittype"
                                   value="{{ visits.typeVisit }}" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Visit With:</label>
                        <div class="col-sm-8">
                            <input type="text" name="visitwith" id="visitwith"
                                   value="{{ visits.withWho }}" class="form-control">
                        </div>

                    </div>


                </div>
                <!-- second colun -->
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Notes:</label>
                        <div class="col-sm-8">
                            <input type="text" name="visitnotes" id="visitnotes"
                                   value="{{ visits.notes }}" class="form-control">
                        </div>
                    </div>

                </div>

            </div>



            <div class="form-group row mt-4 saveButton" data-item-id="{{ visits.id }}">
                <div class="col-sm-12 text-center">
                    <button id="btn_save" data-sa-object="visit" type="submit" class="btn btn-primary">Save</button>
                    <button id="btn_cancel" type="button" class="btn btn-secondary btnCancel">Cancel</button>
                </div>
            </div>

        </form>
    </div>

{% endblock %}
