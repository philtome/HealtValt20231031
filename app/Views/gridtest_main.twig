{% extends 'base.twig' %}

{% block title %}
    - List of Participants
{% endblock %}
{% block navtitle %}
    - List of Participants
{% endblock %}

{% block body %}

    <!--<form method="post">-->
    <style>
        /* Add visible borders around columns and rows */
        .column-border {
            border: 1px solid #ccc;
        }

        .row-border {
            border-bottom: 1px solid #ccc;
        }
    </style>

<body>
<div class="container">
    <div class="row row-border">
        <!-- Row 1 -->
        <div class="col-md-2 column-border">
            <!-- Column 1: Button to open modal for Row 1 -->
            <button class="btn btn-primary" data-toggle="modal" data-target="#myModal1">Open Modal</button>
        </div>
        <div class="col-md-10 column-border">
            <!-- Column 2: Text that will update for Row 1 -->
            <p id="updatedText1">Initial Text 1</p>
        </div>
    </div>
    <div class="row row-border">
        <!-- Row 2 -->
        <div class="col-md-2 column-border">
            <!-- Column 1: Button to open modal for Row 2 -->
            <button class="btn btn-primary" data-toggle="modal" data-target="#myModal2">Open Modal</button>
        </div>
        <div class="col-md-10 column-border">
            <!-- Column 2: Text that will update for Row 2 -->
            <p id="updatedText2">Initial Text 2</p>
        </div>
    </div>
    <!-- Add similar rows for Row 3 and Row 4 -->
</div>    <!-- Add similar rows for Row 3 and Row 4 -->

<!-- Modal for Row 1 -->
<div class="modal fade" id="myModal1">
    <!-- Modal content for Row 1 -->
</div>

<!-- Modal for Row 2 -->
<div class="modal fade" id="myModal2">
    <!-- Modal content for Row 2 -->
</div>




{% endblock %}

{% block modal2 %}
    <div class="modal fade" tabindex="-1" id="confirm-delete-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    Are you sure you want to delete this <span id="data-item-type"></span>?
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel do not delete
                    </button>
{#                    <button type="button" class="btn btn-primary">Save Visit</button>#}
                    <td id="contactdelete_{{ participant.id }}" class="contact-delete">
                        <button id="modalDeleteButton" class="btn btn-danger" data-bs-dismiss="modal">Delete</button>
                    </td>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block modal %}
    <div class="modal fade" tabindex="-1" id="visit-modal2">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Visit2 Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">

                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Family</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Providers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Emergency Contacts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="recipient-name" placeholder="Name">
                        <label for="recipient-name">Name:</label>
                    </div>


                    <form>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="recipient-name" placeholder="Name">
                            <label for="recipient-name">Cell Phone:</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" id="plan-date" placeholder="name">
                            <label for="plan-date">Work Phone:</label>
                        </div>
                        <div class="mb-3">
                            <label for="message-text">Schedule:</label>
                            <textarea class="form-control" id="plan-schedule"></textarea>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" id="plan-cpr" placeholder="name">
                            <label for="plan-cpr">CPR:</label>
                        </div>
                        <div class="mb-3 form-floating">
                            <input type="text" class="form-control" id="plan-medical-status" placeholder="name">
                            <label for="plan-medical-satus">Medical/Nutrition/Sensory/Medical/Pain Status:</label>
                        </div>


                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Save Visit</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}