{% extends 'base.twig' %}

{% block title %}
    - Surgery/Procedure Details
{% endblock %}

{% set navHeader = 'Surgery/Procedure Details -'  ~ visits.firstName ~ ' ' ~ visits.lastName %}

{% block body %}
    <!-- Specific content for template1.twig -->

    <div class="container mt-4">
        <form id="procedure_details_form">
            <div class="row">
                <!-- First Column -->
                <div class="col-sm-6">

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Date:</label>
                        <div class="col-sm-8">
                            <input type="date" name="proceduredate" id="proceduredate"
                                   value="{{ procedures.procedureDate }}" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Surgery/Procedure:</label>
                        <div class="col-sm-8">
                            <input type="text" name="proceduretype" id="proceduretype"
                                   value="{{ procedures.procedureType }}" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Physician:</label>
                        <div class="col-sm-8">
                            <input type="text" name="procedurephysician" id="procedurephysician"
                                   value="{{ procedures.procedurePhysician }}" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Facility:</label>
                        <div class="col-sm-8">
                            <input type="text" name="procedurefacility" id="procedurefacility"
                                   value="{{ procedures.procedureFacility }}" class="form-control">
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Description:</label>
                        <div class="col-sm-8">
                            <input type="text" name="proceduredescription" id="proceduredescription"
                                   value="{{ procedures.procedureDescription }}" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Results:</label>
                        <div class="col-sm-8">
                            <input type="text" name="procedureresults" id="procedureresults"
                                   value="{{ procedures.procedureResults }}" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Instructions:</label>
                        <div class="col-sm-8">
                            <input type="text" name="procedureinstructions" id="procedureinstructions"
                                   value="{{ procedures.procedureInstructions }}" class="form-control">
                        </div>
                    </div>



                    <!-- second colun -->
                    {#                <div class="col-sm-6">#}
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Notes:</label>
                        <div class="col-sm-8">
                            <textarea name="procedurenotes" id="procedurenotes"
                                      class="form-control h-auto pt-3"
                                      aria-describedby="procedureNotesHelp">{{ procedures.notes }}</textarea>
                        </div>
                    </div>

                    {#                </div>#}

                    {# radio buttons for selecting Procedure Type #}
                    <div class="row mt-4">
                        <div class="col-sm-12">
                            <div class="border p-3">
                                <div class="row">
                                    <div class="col-sm-6 pr-0">
                                        <div class="form-check">
                                            <input type="radio" name="procedureMode" id="procedureSurgeryRadio" value="surgery" {{ procedures.procedureMode is same as('surgery') ? 'checked' : '' }} class="mt-3">
                                            <label class="form-check-label" for="procedureSurgeryRadio">Surgery</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-0">
                                        <div class="form-check">
                                            <input type="radio" name="procedureMode" id="procedureProcedureRadio" value="procedure" {{ procedures.procedureMode is same as('procedure') ? 'checked' : '' }} class="mt-3">
                                            <label class="form-check-label" for="procedureProcedureRadio">Procedure</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6 pr-0">
                                        <div class="form-check">
                                            <input type="radio" name="procedureMode" id="procedureTestRadio" value="test" {{ procedures.procedureMode is same as ('test') ? 'checked' : '' }} class="mt-3">
                                            <label class="form-check-label" for="procedureTestRadio">Test/Study</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-0">
                                        <div class="form-check">
                                            <input type="radio" name="procedureMode" id="procedureNoneRadio" value="none" {{ procedures.procedureMode is same as ('none') ? 'checked' : '' }} class="mt-3">
                                            <label class="form-check-label" for="procedureNoneRadio">None</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

            <div class="form-group row mt-4 saveButton" data-item-id="{{ procedures.id }}">
                <div class="col-sm-12 text-center">
                    <button id="btn_save" data-sa-object="procedure" type="submit" class="btn btn-primary">Save</button>
                    <button id="btn_cancel" type="button" class="btn btn-secondary btnCancel">Cancel</button>
                </div>
            </div>

        </form>
    </div>

{% endblock %}
