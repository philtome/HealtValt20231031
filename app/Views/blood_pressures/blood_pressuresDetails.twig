{% extends 'base.twig' %}

{% block title %}
    - Blood Pressure Details
{% endblock %}

{% set navHeader = 'Blood Pressure Details -'  ~ visits.firstName ~ ' ' ~ visits.lastName %}

{% block body %}
    <!-- Specific content for template1.twig -->

    <div class="container mt-4">
        <form id="blood_pressure_details_form">
            <div class="row">
                <!-- First Column -->
                <div class="col-sm-6">

                    <div class="form-group">
                        <label for="dateTimeField" class="form-label">BP Date/Time:</label>
                        <input type="datetime-local" name="bloodpressuredate" id="bloodpressuredate"
                               value="{{  blood_pressures.bloodPressureDate }}" class="form-control">
                    </div>

                    <div class="form-group row">
                        <label for="systolicpressure" class="col-sm-4 col-form-label text-end">Systolic Pressure:</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" name="systolicpressure" id="systolicpressure"
                                       value="{{ blood_pressures.systolicPressure }}" class="form-control">
                                <span class="input-group-text">mm[Hg]</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="diasticolicpressure" class="col-sm-4 col-form-label text-end">Diastolic Pressure::</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                            <input type="text" name="diastolicpressure" id="diastolicpressure"
                                   value="{{ blood_pressures.diastolicPressure }}" class="form-control">
                            <span class="input-group-text">mm[Hg]</span>
                        </div>
                    </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Position:</label>
                        <div class="col-sm-8">
                            <input type="text" name="position" id="position"
                                   value="{{ blood_pressures.position }}" class="form-control">
                        </div>

                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Arm Used:</label>
                        <div class="col-sm-8">
                            <input type="text" name="armused" id="armused"
                                   value="{{ blood_pressures.armUsed }}" class="form-control">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Device Used:</label>
                        <div class="col-sm-8">
                            <input type="text" name="deviceused" id="deviceused"
                                   value="{{ blood_pressures.deviceUsed }}" class="form-control">
                        </div>
                    </div>




                    <!-- second colun -->
                    {#                <div class="col-sm-6">#}
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-end">Notes:</label>
                        <div class="col-sm-8">
            <textarea name="bloodpressurenotes" id="bloodpressurenotes"
                      class="form-control h-auto pt-3"
                      aria-describedby="bloodpressurenotesHelp">{{ blood_pressures.bloodPressureNotes }}</textarea>
                        </div>
                    </div>

                    {#                </div>#}
                </div>
            </div>



            <div class="form-group row mt-4 saveButton" data-item-id="{{ blood_pressures.id }}">
                <div class="col-sm-12 text-center">
                    <button id="btn_save" data-sa-object="blood_pressure" type="submit" class="btn btn-primary">Save</button>
                    <button id="btn_cancel" type="button" class="btn btn-secondary btnCancel">Cancel</button>
                </div>
            </div>

        </form>
    </div>

{% endblock %}
