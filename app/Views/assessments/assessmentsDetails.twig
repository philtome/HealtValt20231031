{% extends 'base.twig' %}

{% block title %}
    - Assessment Details
{% endblock %}
{% block navtitle %}
    - Assessment Details
{% endblock %}

{% block body %}

    {% set AP = 'Actively Participates' %}
    {% set PP = 'Partially Participates' %}
    {% set NP = 'No Participation/Refused' %}

    <div class="container">
        <form id="assessment_details_form">
            <div class="row mt-4">
                <div class="col-sm-12">
                    <div class="border p-3">
                        <div class="row">

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="assessmentParticipant" class="form-label">Participant</label>
                                    <select name="assessmentParticipant" id="assessmentParticipant" class="form-control">
                                        <option value="">Select a Participant</option>
                                        {% for participant in participantList %}
                                            <option value="{{ participant.id }}"
                                                    {% if assessments.participant.id is not empty and assessments.participant.id == participant.id %}
                                                        selected
                                                    {% endif %}
                                            >
                                                {{ participant.firstName }} {{ participant.lastName }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>







                            <div class="col-sm-4">
                                <!-- Input Field 2: Date/Time -->
                                <div class="form-group">
                                    <label for="dateTimeField">Assessment Date/Time:</label>
                                    <input type="datetime-local" name="assessmentDate" id="assessment-date"
                                            value="{{  assessments.date }}" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <!-- Radio Buttons -->
                                <div class="form-group">
                                    <label>Activities for</label>
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input" name="assessmentSeniorAdult" value="Adult Day"
                                               {% if assessments.seniorAdult == 'Adult Day' %}checked{% endif %}> Adult Day
                                    </div>
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input" name="assessmentSeniorAdult" value="Senior Program"
                                               {% if assessments.seniorAdult == 'Senior Program' %}checked{% endif %}> Senior
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <h2>Daily Activities</h2>
                    <div class="form-group">
                        <label>Comunity Outing</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentOuting" value="{{ AP }}"
                                   {% if assessments.outing == AP %}checked{% endif %}> {{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentOuting" value="{{PP}}"
                                   {% if assessments.outing == PP %}checked{% endif %}>
                            {{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentOuting" value="{{ NP }}"
                                   {% if assessments.outing == NP %}checked{% endif %}> {{ NP }}
                        </div>

                        <div class="form-group">
                            <label>In House Activities</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentInHouseAct" value="{{ AP }}"
                                       {% if assessments.inHouseAct == AP  %}checked{% endif %}> {{ AP }}
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentInHouseAct" value="{{ PP }}"
                                       {% if assessments.inHouseAct == PP %}checked{% endif %}> {{ PP }}
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentInHouseAct" value="{{ NP }}"
                                       {% if assessments.inHouseAct == NP %}checked{% endif %}> {{ NP }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Independent Skill Development</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentIndySkilsDev" value="{{ AP }}"
                                       {% if assessments.indyskilsdev == AP %}checked{% endif %}>{{ AP }}
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentIndySkilsDev" value="{{ PP }}"
                                       {% if assessments.indyskilsdev == PP %}checked{% endif %}>{{ PP }}
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentIndySkilsDev" value="{{ NP }}"
                                       {% if assessments.indyskilsdev == NP %}checked{% endif %}>{{ NP }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Volunteer</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentVolunteer" value="{{ AP }}"
                                       {% if assessments.volunteer == AP %}checked{% endif %}>{{AP}}
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentVolunteer" value="{{ PP }}"
                                       {% if assessments.volunteer == PP %}checked{% endif %}> {{ PP }}
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentVolunteer" value="{{ NP }}"
                                       {% if assessments.volunteer == NP %}checked{% endif %}> {{ NP }}
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-4">
                    <h2>Therapies</h2>
                    <div class="form-group">
                        <label>Reading</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentReading" value="{{ AP }}"
                                   {% if assessments.reading == AP %}checked{% endif %}> {{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentReading" value="{{ PP }}"
                                   {% if assessments.reading == PP %}checked{% endif %}> {{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentReading" value="{{ NP }}"
                                   {% if assessments.reading == NP %}checked{% endif %}> {{ NP }}
                        </div>
                        <label>Writing</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentWriting" value="{{ AP }}"
                                   {% if assessments.writing == AP %}checked{% endif %}> {{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentWriting" value="{{ PP }}"
                                   {% if assessments.writing == PP %}checked{% endif %}> {{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentWriting" value="{{ NP }}"
                                   {% if assessments.writing == NP %}checked{% endif %}> {{ NP }}
                        </div>
                        <label>Education & Development Skills</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentEddevelopment" value="{{ AP }}"
                                   {% if assessments.eddevelopment == AP %}checked{% endif %}>{{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentEddevelopment" value="{{ PP }}"
                                   {% if assessments.eddevelopment == PP %}checked{% endif %}>{{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentEddevelopment" value="{{ NP }}"
                                   {% if assessments.eddevelopment == NP %}checked{% endif %}>{{ NP }}
                        </div>

                        <label>Art</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentArt" value="{{ AP }}"
                                   {% if assessments.art == AP %}checked{% endif %}>{{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentArt" value="{{ PP }}"
                                   {% if assessments.art == PP %}checked{% endif %}>{{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentCrafts" value="{{ NP }}"
                                   {% if assessments.art == NP %}checked{% endif %}>{{ NP }}
                        </div>
                        <label>Crafts</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentCrafts" value="{{ AP }}"
                                   {% if assessments.crafts == AP %}checked{% endif %}>{{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentCrafts" value="{{ PP }}"
                                   {% if assessments.crafts == PP %}checked{% endif %}>{{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentCrafts" value="{{ NP }}"
                                   {% if assessments.crafts == NP %}checked{% endif %}>{{ NP }}
                        </div>

                    </div>

                </div>
                <div class="col-md-4">
                    <h2>Misc</h2>
                    <div class="form-group">


                        <label>Socializing</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentSocializing" value="{{ AP }}"
                                   {% if assessments.socializing == AP %}checked{% endif %}>{{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentSocializing" value="{{ PP }}"
                                   {% if assessments.socializing == PP %}checked{% endif %}>{{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentSocializing" value="{{ NP }}"
                                   {% if assessments.socializing == NP %}checked{% endif %}>{{ NP }}
                        </div>

                        <label>Current Events</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentCurrentEvents" value="{{ AP }}"
                                   {% if assessments.currentEvents == AP %}checked{% endif %}>{{ AP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentCurrentEvents" value="{{ PP }}"
                                   {% if assessments.currentEvents == PP %}checked{% endif %}>{{ PP }}
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentCurrentEvents" value="{{ NP }}"
                                   {% if assessments.currentEvents == NP %}checked{% endif %}>{{ NP }}
                        </div>

                        <label>Lunch</label>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentLunch" value="Ate"
                                   {% if assessments.lunch == 'Ate' %}checked{% endif %}> Ate
                        </div>
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="assessmentLunch" value="Refused"
                                   {% if assessments.lunch == 'Refused' %}checked{% endif %}> Refused
                        </div>

                        <div class="form-group">
                            <label>Snack</label>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentSnack" value="Ate"
                                       {% if assessments.snack == 'Ate' %}checked{% endif %}> Ate
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="assessmentSnack" value="Refused"
                                       {% if assessments.snack == 'Refused' %}checked{% endif %}> Refused
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Checkboxes Section -->
            <div class="row mt-4">
                <h2>Tasks Completed by Staff</h2>
                <div class="col-sm-12">
                    <div class="border p-3">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-check">
                                    <input type="checkbox" name="assessmentToilet"
                                           id="toiletCheckbox" {{ assessments.toilet == 'on' ? 'checked' : '' }} class="mt-3">
                                    <label class="form-check-label" for="toiletCheckbox">Toileting</label>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-check">
                                    <input type="checkbox" name="assessmentGrooming"
                                           id="groomingCheckbox" {{ assessments.grooming  == 'on' ? 'checked' : '' }}
                                           class="mt-3">
                                    <label class="form-check-label" for="groomingCheckbox">Grooming</label>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

            <div class="form-group row mt-4 saveButton" data-item-id="{{ assessments.id }}">
                <div class="col-sm-12 text-center">
                    <button id="btn_save" data-sa-object="assessment" type="submit" class="btn btn-primary">Save</button>
                    <button id="btn_cancel" data-sa-object="assessment" type="button" class="btn btn-secondary">Cancel</button>
                </div>
            </div>
            <div></div>
            <div></div>
        </form>
    </div>

{% endblock %}
